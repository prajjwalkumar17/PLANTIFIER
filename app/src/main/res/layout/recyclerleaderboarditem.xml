<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/borderitemcolor"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:padding="15dp"
        android:weightSum="3">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icontree" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/recycler_leaderboard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prajjwal kumar"
                android:textColor="@color/final_itemcolor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/recycler_leaderboard_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="talk2prajjwal@gmail.com"
                android:textColor="@color/final_master" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pics Clicked"
                android:textColor="@color/final_itemcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recycler_leaderboard_clicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="22"
                android:textColor="@color/final_master"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>