<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F7FEE7"
        android:padding="20dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/recyclerportallin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:src="@drawable/iconplant" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recycleritem_dashboard_text_speciesname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aloe vera"
                        android:textColor="@color/final_itemcolor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/recycleritem_dashboard_text_familyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asphodelaceae"
                        android:textColor="@color/final_itemcolor" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/recyclerallnotes_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/recyclerportallin1"
                android:layout_marginStart="30dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerallnotes_image"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/recycleritem_dashboard_createdby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Clicked by:-"
                    android:textColor="@color/final_itemcolor" />

                <TextView
                    android:id="@+id/recycleropendashboard_picby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recycleritem_dashboard_createdby"
                    android:text="Un-named"
                    android:textColor="@color/final_itemcolor"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/recycleropendashboard_wiki_bot"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/draw_forwrd_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/final_itemcolor" />


            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>