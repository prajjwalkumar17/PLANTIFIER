<resources>
    <!-- Base application theme. -->
    <style name="Theme.Planeta" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/final_master</item>
        <item name="colorPrimaryVariant">@color/final_secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/final_itemcolor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Planeta.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Planeta.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Planeta.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>